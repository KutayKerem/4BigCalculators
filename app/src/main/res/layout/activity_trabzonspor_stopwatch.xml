<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TrabzonsporStopwatch">

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ts3" />

    <Button
        android:id="@+id/back"
        android:layout_width="93dp"
        android:layout_height="32dp"
        android:layout_marginTop="284dp"
        android:backgroundTint="#05117A"
        android:onClick="back"
        android:text="Geri"
        android:textSize="8sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toEndOf="@+id/stop"
        app:layout_constraintTop_toBottomOf="@+id/followed"
        tools:ignore="TouchTargetSizeCheck" />

    <Button
        android:id="@+id/stop"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:layout_marginTop="284dp"
        android:layout_marginEnd="113dp"
        android:backgroundTint="#05117A"
        android:onClick="stop"
        android:text="durdur"
        android:textSize="8sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/clear"
        app:layout_constraintTop_toBottomOf="@+id/followed"
        tools:ignore="TouchTargetSizeCheck" />

    <Button
        android:id="@+id/clear"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:layout_marginTop="284dp"
        android:layout_marginEnd="12dp"
        android:backgroundTint="#05117A"
        android:onClick="clear"
        android:text="SIFIRLA"
        android:textSize="8sp"
        app:layout_constraintEnd_toStartOf="@+id/stop"
        app:layout_constraintStart_toEndOf="@+id/basla"
        app:layout_constraintTop_toBottomOf="@+id/followed"
        tools:ignore="TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/followed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="344dp"
        android:backgroundTint="#05117A"
        android:textAlignment="center"
        android:textSize="96sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/basla"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="284dp"
        android:layout_marginEnd="4dp"
        android:backgroundTint="#05117A"
        android:onClick="start"
        android:text="basla"
        android:textAlignment="center"
        android:textSize="8sp"
        app:layout_constraintEnd_toStartOf="@+id/clear"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/followed"
        tools:ignore="TouchTargetSizeCheck" />
</androidx.constraintlayout.widget.ConstraintLayout>